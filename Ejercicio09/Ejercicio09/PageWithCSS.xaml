<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio09.PageWithCSS">
    <ContentPage.Resources>
        <StyleSheet Source="/Styles/style1.css"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Padding="10,20,0,10">
            <Label x:Name="titulo" Text="Implementando CSS"/>
            <Label StyleClass="texto" Text="Nombre"/>
            <Entry x:Name="name" Placeholder="Ingrese Nombre"/>
            <Label StyleClass="texto" Text="Apellio"/>
            <Entry x:Name="last_name" Placeholder="Ingrese Apellido"/>
            <Button x:Name="btnSubmit" Text="Enviar" Margin="60, 30, 60, 60"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>